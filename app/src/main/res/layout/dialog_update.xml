<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FA242424"
    android:gravity="center"
    android:layout_margin="30dp">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Available"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/intert_tight_medium"
        android:gravity="center" />

    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A new version of the app is available. Please update to continue using the app."
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/inter_tight_thin"
        android:gravity="center"
        android:layout_marginTop="16dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/dialog_update_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:textColor="@color/white"
        android:layout_marginTop="20dp" />

</LinearLayout>
